<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default"
	xmlns:wnd="urn:import:com.nabla.wapp.client.ui"
	xmlns:form="urn:import:com.nabla.wapp.client.ui.form">
	
	<ui:with field="model" type="com.nabla.dc.client.model.options.AddUserModel"/>
	<ui:with field="fields" type="com.nabla.dc.client.model.options.AddUserModel.Fields"/>

	<wnd:ModalDialog caption="Create New User" icon="user_small.png" autoClose="true">
		<ui:attribute name="caption" description="Create new user caption"/>
		<form:Form ui:field="form" model="{model}">
 			<form:TextEditBox name="{fields.userName}"><ui:msg>*Username</ui:msg></form:TextEditBox>
			<form:PasswordEditBox name="{fields.password}"><ui:msg>*Password</ui:msg></form:PasswordEditBox>
			<form:ConfirmPasswordEditBox name="{fields.confirmPassword}" buddy="{fields.password}" errorMessage="Password confirmation does not match password.">
				<ui:attribute name="errorMessage" description="Confirm password error message"/>
				<ui:msg>Con*firm password</ui:msg>
			</form:ConfirmPasswordEditBox>
			<form:ButtonBar>
				<wnd:SubmitButton><ui:msg>*OK</ui:msg></wnd:SubmitButton>
				<wnd:CancelButton><ui:msg>*Cancel</ui:msg></wnd:CancelButton>
			</form:ButtonBar>
		</form:Form>
	</wnd:ModalDialog>
</ui:UiBinder> 