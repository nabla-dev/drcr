<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default"
    xmlns:ctrl="urn:import:com.nabla.wapp.client.ui"
	xmlns:wnd="urn:import:com.nabla.wapp.client.ui"
	xmlns:form="urn:import:com.nabla.wapp.client.ui.form">
	
	<ui:with field="model" type="com.nabla.wapp.client.model.Model"/>
	<ui:with field="fields" type="com.nabla.dc.client.model.options.RoleDefinitionModel.Fields"/>
	<ui:with field="treeModel" type="com.nabla.wapp.client.model.Model"/>
	<ui:with field="treeFields" type="com.nabla.dc.client.model.options.RoleDefinitionTreeModel.Fields"/>
	
	<wnd:ModalDialog caption="Role Definition" icon="role_small.png" autoClose="true">
		<ui:attribute name="caption" description="Edit role definition dialog caption"/>
		<form:Form ui:field="form" model="{model}" autoFetchData="true" columnWidths="35,*" width="350" height="350">
			<form:StaticText name="{fields.name}" width="*"><ui:msg>Name</ui:msg></form:StaticText>
			<form:TreeGridItem name="{fields.roles}" ui:field="tree" model="{treeModel}" title="Select from list of roles below" colSpan="2" width="*" height="200" loadDataOnDemand="true" nodeIcon="privilege_small.png" folderIcon="role_small.png">
				<ui:attribute name="title" description="Edit role definition message"/>
				<wnd:TreeGridField name="{treeFields.name}" canSort="false"><ui:msg>Role</ui:msg></wnd:TreeGridField>
				<wnd:TreeGridField name="{treeFields.include}" canSort="false" width="40" canEdit="true"><ui:msg>_</ui:msg></wnd:TreeGridField>
			</form:TreeGridItem>
			<form:ButtonBar>
				<wnd:SubmitButton><ui:msg description="OK button">*OK</ui:msg></wnd:SubmitButton>
				<wnd:CancelButton><ui:msg description="Cancel button">*Cancel</ui:msg></wnd:CancelButton>
			</form:ButtonBar>
		</form:Form>	
	</wnd:ModalDialog>
</ui:UiBinder> 