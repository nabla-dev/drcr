<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default"
	xmlns:wnd="urn:import:com.nabla.wapp.client.ui"
	xmlns:form="urn:import:com.nabla.wapp.client.ui.form">

	<ui:with field="res" type="com.nabla.dc.client.ui.IResource"/>
	<ui:with field="model" type="com.nabla.wapp.client.model.Model"/>
	<ui:with field="fields" type="com.nabla.wapp.client.model.LoginModel.Fields" />
	
	<ui:style>
		.welcome-message {
			font-family: Verdana, serif;
			font-size: 14px;
			font-weight:bold;
		}
		.welcome-panel {
			border-bottom: thick solid grey;
		}
	</ui:style>
	
	<wnd:VLayout membersMargin="20">
		<wnd:HLayout styleName="{style.welcome-panel}" height="30">
			<wnd:Label styleName="{style.welcome-message}" width="100%"><ui:msg description="Welcome message">Welcome to Dr | (Cr)</ui:msg></wnd:Label>
		</wnd:HLayout>
		<wnd:HLayout>
			<wnd:HLayoutSpacer/>
			<wnd:VLayout>
				<wnd:Dialog modal="false" caption="Authentication Required" icon="password_small.png" canDragResize="false">
					<ui:attribute name="caption" description="Login caption"/>
					<form:Form ui:field="form" model="{model}">
						<form:MessageItem styleName="{res.style.loginMessage}"><ui:msg description="Login message">Please enter your username and password.</ui:msg></form:MessageItem>		
			 			<form:TextEditBox name="{fields.userName}"><ui:msg description="Username field">*Username</ui:msg></form:TextEditBox>
						<form:PasswordEditBox name="{fields.password}"><ui:msg description="Password field">*Password</ui:msg></form:PasswordEditBox>
						<form:ButtonBar>
							<wnd:SubmitButton><ui:msg description="Login button">*Login</ui:msg></wnd:SubmitButton>
						</form:ButtonBar>
					</form:Form>
				</wnd:Dialog>
				<wnd:VLayoutSpacer/>
			</wnd:VLayout>
			<wnd:HLayoutSpacer/>
		</wnd:HLayout>
	</wnd:VLayout>
</ui:UiBinder> 