<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default"
    xmlns:ctrl="urn:import:com.nabla.wapp.client.ui"
	xmlns:wnd="urn:import:com.nabla.wapp.client.ui"
	xmlns:form="urn:import:com.nabla.wapp.client.ui.form">
	
	<ui:with field="model" type="com.smartgwt.client.widgets.form.ValuesManager" />
	<ui:with field="fields" type="com.nabla.fixed_assets.client.model.AssetListModel.Fields" />
		
	<wnd:WizardPage title="This page allows you to enter an opening accumulated depreciation at a given date. Usually this would be at the start of your financial year.">
		<ui:attribute name="title" description="Asset wizard - opening page caption"/>
		<form:Form ui:field="form" valuesManager="{model}">
			<form:Control name="{fields.openingMonth}"><ui:msg>*Month</ui:msg></form:Control>
			<form:Control name="{fields.openingYear}" width="100"><ui:msg>*Year</ui:msg></form:Control>
			<form:Control name="{fields.openingAccumDep}" width="100"><ui:msg>*Accum dep (Â£)</ui:msg></form:Control>
			<form:IntegerSpinnerBox name="{fields.openingDepPeriod}" width="100"><ui:msg>*Dep period (month)</ui:msg></form:IntegerSpinnerBox>
		</form:Form>
	</wnd:WizardPage>
</ui:UiBinder> 