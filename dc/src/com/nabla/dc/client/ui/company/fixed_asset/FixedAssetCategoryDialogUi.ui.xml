<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default"
    xmlns:ctrl="urn:import:com.nabla.wapp.client.ui"
	xmlns:wnd="urn:import:com.nabla.wapp.client.ui"
	xmlns:form="urn:import:com.nabla.wapp.client.ui.form">
	
	<ui:with field="formModel" type="com.nabla.dc.client.model.company.settings.fixed_asset.FixedAssetCategoryFormModel"/>
	<ui:with field="availableModel" type="com.nabla.dc.client.model.company.settings.fixed_asset.AvailableFixedAssetCategoryTreeModel"/>
	<ui:with field="model" type="com.nabla.dc.client.model.company.settings.fixed_asset.FixedAssetCategoryTreeModel"/>
	
	<wnd:ModalDialog caption="Fixed Asset Categories" icon="fixed_asset/asset_category_small.png" autoClose="true">
		<ui:attribute name="caption" description="Edit company fixed asset categories dialog caption"/>
		<form:Form ui:field="form" model="{formModel}" autoFetchData="true" columnWidths="35,*" width="550" height="350">
			<form:StaticText name="{formModel.fields.name}" width="*"><ui:msg>Company</ui:msg></form:StaticText>
			<form:TreeGridItem name="{formModel.fields.availableCategories}" ui:field="availableCategories" model="{availableModel}" title="Select from list of roles below" colSpan="2" width="*" height="200" loadDataOnDemand="true" nodeIcon="fixed_asset/asset_category_small.png" folderIcon="fixed_asset/fs_category_small.png">
				<ui:attribute name="title" description="Edit role definition message"/>
				<wnd:TreeGridField name="{availableModel.fields.name}" canSort="false"><ui:msg>Category</ui:msg></wnd:TreeGridField>
			</form:TreeGridItem>
			<form:TreeGridItem name="{formModel.fields.categories}" ui:field="categories" model="{model}" title="Select from list of roles below" colSpan="2" width="*" height="200" loadDataOnDemand="true" nodeIcon="fixed_asset/asset_category_small.png" folderIcon="fixed_asset/fs_category_small.png">
				<ui:attribute name="title" description="Edit role definition message"/>
				<wnd:TreeGridField name="{model.fields.name}" canSort="false"><ui:msg>Category</ui:msg></wnd:TreeGridField>
				<wnd:TreeGridField name="{model.fields.active}" canSort="false" width="40" canEdit="true"><ui:msg>_</ui:msg></wnd:TreeGridField>
			</form:TreeGridItem>
			<form:ButtonBar>
				<wnd:SubmitButton><ui:msg description="OK button">*OK</ui:msg></wnd:SubmitButton>
				<wnd:CancelButton><ui:msg description="Cancel button">*Cancel</ui:msg></wnd:CancelButton>
			</form:ButtonBar>
		</form:Form>	
	</wnd:ModalDialog>
</ui:UiBinder> 